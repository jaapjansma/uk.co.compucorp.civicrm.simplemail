<?xml version="1.0" encoding="iso-8859-1" ?>
<table>
  <base>CRM/Simplemail</base>
  <class>Message</class>
  <name>civicrm_simplemail_message</name>
  <comment>Campaign messages for Simple Mail</comment>
  <add>4.4</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique message ID</comment>
    <add>4.4</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>label</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Message label</comment>
    <title>Label</title>
    <required>true</required>
    <uniqueName>simplemail_message_label</uniqueName>
  </field>

  <field>
    <name>is_active</name>
    <type>boolean</type>
    <default>0</default>
    <required>true</required>
  </field>
</table>
