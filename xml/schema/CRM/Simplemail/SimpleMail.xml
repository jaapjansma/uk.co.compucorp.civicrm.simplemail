<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Simplemail</base>
  <class>SimpleMail</class>
  <name>civicrm_simplemail</name>
  <comment>Campaign details for Simple Mail</comment>
  <add>4.4</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique SimpleMail ID</comment>
    <add>4.4</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>name</name>
    <type>varchar</type>
    <length>64</length>
    <title>Name</title>
    <comment>Name of the mailing campaign</comment>
    <!--<required>true</required>-->
    <add>4.4</add>
  </field>

  <field>
    <name>resume_step</name>
    <type>tinyint unsigned</type>
    <title>Resume Step</title>
    <!--<required>true</required>-->
    <default>1</default>
    <comment>The step to resume from on the wizard</comment>
    <add>4.4</add>
  </field>

  <field>
    <name>from_name</name>
    <type>varchar</type>
    <length>128</length>
    <comment>Name for the from email address</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>from_email</name>
    <type>varchar</type>
    <length>128</length>
    <comment>Email for the from email address</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>header_id</name>
    <type>int unsigned</type>
    <!--<required>false</required>-->
    <comment>The ID of a mailing header</comment>
    <add>4.4</add>
  </field>
  <foreignKey>
    <name>header_id</name>
    <table>civicrm_simplemailheader</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>subject</name>
    <type>varchar</type>
    <length>64</length>
    <title>Subject</title>
    <comment>Subject of the email</comment>
    <!--<required>true</required>-->
    <add>4.4</add>
  </field>

  <field>
    <name>title</name>
    <type>varchar</type>
    <length>64</length>
    <title>Title</title>
    <comment>Title/strapline for the email (in the title region)</comment>
    <!--<required>true</required>-->
    <add>4.4</add>
  </field>

  <field>
    <name>body</name>
    <type>text</type>
    <title>Body</title>
    <comment>Body of the email</comment>
    <!--<required>true</required>-->
    <add>4.4</add>
  </field>

  <field>
    <name>contact_details</name>
    <type>text</type>
    <title>Contact Details</title>
    <comment>Contact details</comment>
    <!--<required>true</required>-->
    <add>4.4</add>
  </field>

  <field>
    <name>message_id</name>
    <type>int unsigned</type>
    <!--<required>false</required>-->
    <comment>The ID of the campaign message</comment>
    <add>4.4</add>
  </field>
  <foreignKey>
    <name>message_id</name>
    <table>civicrm_simplemailmessage</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>send_immediately</name>
    <type>boolean</type>
    <default>0</default>
    <!--<required>true</required>-->
  </field>

  <field>
    <name>send_on</name>
    <type>datetime</type>
    <title>Send On</title>
    <comment>Date scheduled for sending emails</comment>
    <!--<required>false</required>-->
    <add>4.4</add>
  </field>

</table>
