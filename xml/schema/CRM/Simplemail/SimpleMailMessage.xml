<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Simplemail</base>
  <class>SimpleMailMessage</class>
  <name>civicrm_simplemailmessage</name>
  <comment>Message for Simple Mail</comment>
  <add>4.4</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Message ID</comment>
    <add>4.4</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>label</name>
    <type>varchar</type>
    <length>30</length>
    <comment>Label for the message</comment>
    <title>Label</title>
    <required>true</required>
    <add>4.4</add>
  </field>

  <field>
    <name>text</name>
    <type>text</type>
    <comment>Long text for the message</comment>
    <title>Text</title>
    <required>true</required>
    <add>4.4</add>
  </field>

  <field>
    <name>is_active</name>
    <type>boolean</type>
    <default>1</default>
    <required>true</required>
  </field>
</table>
