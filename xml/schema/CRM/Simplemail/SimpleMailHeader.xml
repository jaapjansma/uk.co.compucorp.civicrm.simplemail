<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Simplemail</base>
  <class>SimpleMailHeader</class>
  <name>civicrm_simplemailheader</name>
  <comment>Header for Simple Mail</comment>
  <add>4.4</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Header ID</comment>
    <add>4.4</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>label</name>
    <type>varchar</type>
    <length>30</length>
    <comment>Label for the header image</comment>
    <title>Name</title>
    <required>true</required>
    <uniqueName>simplemail_header_label</uniqueName>
    <add>4.4</add>
  </field>

  <field>
    <name>image</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Header image</comment>
    <required>true</required>
  </field>

  <field>
    <name>show_logo</name>
    <type>boolean</type>
    <default>1</default>
    <required>true</required>
  </field>

  <field>
    <name>logo_image</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Logo image</comment>
    <required>false</required>
  </field>
</table>
